<?xml version="1.0" encoding="UTF-8"?>

<!--导入JavaFXML类-->
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<!--布局控件BorderPane，fx:controller属性用于声明事件处理的Controller，值为Controller类的类全名-->
<!--xmlns用于声明默认命名空间，这里的声明随着你安装的Java JDK版本号的不同可以不同，但是最好不要比你安装的JDK版本高-->
<?import com.dbboys.customnode.CustomLabelTextField?>
<?import com.dbboys.customnode.CustomShortcutMenuItem?>
<?import com.dbboys.customnode.CustomUserTextField?>
<?import com.dbboys.customnode.CustomTreeviewTab?>
<StackPane fx:controller="com.dbboys.ctrl.MainController" fx:id="root" xmlns="http://javafx.com/javafx/8.0.31" xmlns:fx="http://javafx.com/fxml/1" style="-fx-border-width: 0.5;-fx-border-color: #888">
    <VBox fx:id="mainVBox">
        <HBox alignment="CENTER_LEFT" spacing="0" style="-fx-background-color: linear-gradient(to bottom, #eee, #eee);" >
            <Label fx:id="appLogoLabel" style="-fx-padding: 0 10 0 10" />
            <MenuBar>
                <menus >
                    <Menu fx:id="menuFile" mnemonicParsing="false"  style="-fx-min-height: 30">
                        <items>
                            <CustomShortcutMenuItem fx:id="menuFileAddFolder" mnemonicParsing="false" onAction="#createConnectFolder">
                            </CustomShortcutMenuItem>
                            <CustomShortcutMenuItem fx:id="menuFileNewConnection" mnemonicParsing="false" id="fileMenu" onAction="#createConnectLeaf">
                            </CustomShortcutMenuItem>

                            <CustomShortcutMenuItem fx:id="menuFileDisconnectAll" mnemonicParsing="false" onAction="#disconnectAll">
                            </CustomShortcutMenuItem>

                            <CustomShortcutMenuItem fx:id="newSqlFileMenuItem" mnemonicParsing="false" >
                            </CustomShortcutMenuItem>
                            <CustomShortcutMenuItem fx:id="menuFileOpenSql" mnemonicParsing="false" onAction="#openSqlFile">
                            </CustomShortcutMenuItem>
                        </items>
                    </Menu>
                    <Menu fx:id="menuConfig" mnemonicParsing="false"  style="-fx-min-height: 30">
                        <items>
                            <CustomShortcutMenuItem fx:id="menuConfigCheckEnv" mnemonicParsing="false" id="modifyMenu" onAction="#checkInstallEnv">
                            </CustomShortcutMenuItem>
                            <!--
                            <MenuItem mnemonicParsing="false"  text="安装ORACLE ( coding )">
                            </MenuItem>
                            <MenuItem mnemonicParsing="false"  text="安装MYSQL ( coding )">
                            </MenuItem>
                            -->
                            <CustomShortcutMenuItem fx:id="menuConfigInstallGbase" mnemonicParsing="false" onAction="#installGBase8S">
                            </CustomShortcutMenuItem>
                            <CustomShortcutMenuItem fx:id="menuConfigUninstallGbase" mnemonicParsing="false" onAction="#unInstallGBase8S">
                            </CustomShortcutMenuItem>

                            <!--
                            <MenuItem mnemonicParsing="false"  text="安装PG(Install POSTGRESQL)">
                            </MenuItem>
                            <MenuItem mnemonicParsing="false"  text="安装DAMENG(Install DAMENG)">
                            </MenuItem>

                            <MenuItem mnemonicParsing="false"  text="安装KINGBASE(Install KINGBASE)">
                            </MenuItem>
                             -->
                        </items>
                    </Menu>
                    <Menu fx:id="menuSettings" mnemonicParsing="false"  style="-fx-min-height: 30">
                        <items>
                            <Menu fx:id="menuSettingsLanguage" mnemonicParsing="false">
                                <items>
                                    <CustomShortcutMenuItem fx:id="menuSettingsLanguageZh" mnemonicParsing="false" onAction="#setLanguageZh"/>
                                    <CustomShortcutMenuItem fx:id="menuSettingsLanguageEn" mnemonicParsing="false" onAction="#setLanguageEn"/>
                                    <CustomShortcutMenuItem fx:id="menuSettingsLanguageZhTw" mnemonicParsing="false" onAction="#setLanguageZhHant"/>
                                </items>
                            </Menu>
                            <CustomShortcutMenuItem fx:id="menuSettingsReset" mnemonicParsing="false"  id="settingMenu" onAction="#initDB">
                            </CustomShortcutMenuItem>
                        </items>
                    </Menu>
                    <Menu fx:id="menuHelp" mnemonicParsing="false"  style="-fx-min-height: 30">
                        <items>
                            <CustomShortcutMenuItem fx:id="menuHelpAbout" mnemonicParsing="false"  id="helpMenu" onAction="#aboutDBboys">
                            </CustomShortcutMenuItem>
                        </items>
                        <CustomShortcutMenuItem fx:id="menuHelpCommunity" mnemonicParsing="false"  id="community" onAction="#community">
                        </CustomShortcutMenuItem>
                        <CustomShortcutMenuItem fx:id="menuHelpCheckUpdate" mnemonicParsing="false"  id="checkVersion" onAction="#checkVersion">
                        </CustomShortcutMenuItem>
                    </Menu>
                </menus>
            </MenuBar>
            <Region fx:id="windowTitleBlank" HBox.hgrow="ALWAYS">
            </Region>
            <Button fx:id="windowMinimizeButton" prefHeight="35" prefWidth="35" styleClass="windowSizeButton">
            </Button>
            <Button fx:id="windowMaximizeButton" prefHeight="35" prefWidth="35" styleClass="windowSizeButton">
            </Button>
            <Button fx:id="windowCloseButton" prefHeight="35" prefWidth="35" styleClass="windowCloseButton" text="✕">
            </Button>
        </HBox>
        <!--
        <HBox alignment="CENTER_LEFT" spacing="10" minHeight="26" style="-fx-background-color: linear-gradient(to bottom, #eee, #eee);-fx-border-width: 0.5 0 0 0;-fx-border-color: #aaa" >
            <Label text="  | " style="-fx-text-fill: #bbb"></Label>
            <Label text="[192.168.17.101_9088]">
            </Label>
        </HBox>
        -->
        <SplitPane fx:id="mainSplitPane" style="-fx-border-color: #aaa;-fx-border-width: 0.5 0 0.5 0;-fx-background-insets: 0;-fx-padding: 0">
            <VBox alignment="TOP_LEFT">
                <StackPane prefHeight="2000">
                    <TabPane fx:id="treeviewTabPane" side="LEFT" minWidth="35" tabClosingPolicy="UNAVAILABLE">
                        <CustomTreeviewTab fx:id="connectTab" closable="false" >
                            <VBox style="-fx-border-width: 0 0 0 0.5;-fx-border-color: #aaa">
                                <HBox minHeight="30" alignment="CENTER_LEFT">
                                    <Button fx:id="create_connect"  focusTraversable="false" styleClass="little-custom-button" onAction="#createConnectLeaf">
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </Button>
                                    <CustomUserTextField fx:id="connectSearchTextField" prefWidth="2000" style="-fx-padding: 1 1 1 3" >
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </CustomUserTextField>
                                    <Button fx:id="connectSearchButton"  focusTraversable="false" styleClass="little-custom-button" disable="true">
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </Button>
                                </HBox>
                                <TreeView fx:id="databaseMetaTreeView" prefHeight="2000" style="-fx-border-width: 0.5 0 0 0;-fx-border-color: #aaa;"></TreeView>
                            </VBox>
                        </CustomTreeviewTab>
                        <CustomTreeviewTab fx:id="markdownTab" closable="false">
                            <VBox fx:id="markdownTreeViewVBox"  style="-fx-border-width: 0 0 0 0.5;-fx-border-color: #aaa">
                                <HBox minHeight="30" alignment="CENTER_LEFT">
                                    <StackPane fx:id="rebuildMarkdownIndexButton_stackpane">
                                    <Button fx:id="rebuildMarkdownIndexButton"  focusTraversable="false" styleClass="little-custom-button" onAction="#rebuildMarkdownIndex">
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </Button>
                                    </StackPane>
                                    <CustomUserTextField fx:id="markdownSearchTextField" prefWidth="2000" style="-fx-padding: 1 1 1 3" >
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </CustomUserTextField>
                                    <StackPane fx:id="markdownSearchIconStackPane" >
                                    <Button fx:id="markdownSearchButton"  focusTraversable="false" styleClass="little-custom-button" disable="true">
                                        <tooltip>
                                            <Tooltip style="-fx-font-size: 10"/>
                                        </tooltip>
                                    </Button>
                                    </StackPane>
                                </HBox>
                                <!--
                               <TreeView fx:id="knowledge_treeview" prefHeight="2000" style="-fx-border-width: 0.5 0 0 0;-fx-border-color: #aaa;"></TreeView>
                                   -->
                            </VBox>
                        </CustomTreeviewTab>
                    </TabPane>
                </StackPane>
            </VBox>
            <StackPane style="-fx-border-color: #eee;-fx-border-width:0 2 0 0;">
                <Label fx:id="doubleClickNewSqlLabel" style="-fx-text-fill: #ccc;"></Label>
                <TabPane tabDragPolicy="REORDER" tabClosingPolicy="ALL_TABS" fx:id="sqlTabPane"  style="-fx-border-color: #aaa;-fx-border-width:0 0.5 0 0;">
                </TabPane>
            </StackPane>
        </SplitPane>
        <HBox spacing="10" fx:id="statusHBox" style="-fx-font-size: 10" alignment="CENTER">
            <Button fx:id="statusBackSqlStopButton" styleClass="little-custom-button" focusTraversable="false" disable="true">
                <tooltip>
                    <Tooltip/>
                </tooltip>
            </Button>
            <Label fx:id="statusBackSqlCountLabel" style="-fx-font-size: 7;-fx-text-fill: #888" translateY="-1">
            </Label>
            <Button fx:id="statusBackSqlListButton" styleClass="little-custom-button" focusTraversable="false">
                <tooltip>
                    <Tooltip/>
                </tooltip>
            </Button>
            <ImageView fx:id="statusBackSqlProgress" fitHeight="10" fitWidth="10" preserveRatio="true" />
            <Region HBox.hgrow="ALWAYS">
            </Region>
            <StackPane>
                <StackPane>
                    <HBox>
                        <Button fx:id="snapshotRootButton" styleClass="little-custom-button" focusTraversable="false">
                            <tooltip>
                                <Tooltip/>
                            </tooltip>
                        </Button>
                        <CustomLabelTextField text="www.dbboys.com" prefWidth="90" translateY="1"></CustomLabelTextField>
                    </HBox>
                </StackPane>
                <StackPane fx:id="downloadStackPane" style="-fx-background-color: #f5f5f5">
                </StackPane>
            </StackPane>
        </HBox>
    </VBox>
    <StackPane fx:id="noticePane" maxWidth="360" maxHeight="25" style="-fx-background-color: none;-fx-alignment: center" StackPane.alignment="CENTER" visible="false">
    </StackPane>
    <Pane fx:id="resizeLayerRight" StackPane.alignment="BOTTOM_RIGHT" style="-fx-background-color: transparent;-fx-max-width: 3"></Pane>
    <Pane fx:id="resizeLayerLeft" StackPane.alignment="BOTTOM_LEFT" style="-fx-background-color: transparent;-fx-max-width: 3;"></Pane>
    <Pane fx:id="resizeLayerBottom" StackPane.alignment="BOTTOM_LEFT" style="-fx-background-color: transparent;-fx-max-height: 3"></Pane>
    <Pane fx:id="resizeLayerTop" StackPane.alignment="TOP_LEFT" style="-fx-background-color: transparent;-fx-max-height: 3"></Pane>
    <Pane fx:id="resizeLayerBottom_left" StackPane.alignment="BOTTOM_LEFT" style="-fx-background-color: transparent;-fx-max-width: 3;-fx-max-height: 3"></Pane>
    <Pane fx:id="resizeLayerBottom_right" StackPane.alignment="BOTTOM_RIGHT" style="-fx-background-color: transparent;-fx-max-width: 3;-fx-max-height: 3"></Pane>
</StackPane>




